(include "./desktops.yuck")
(defpoll time 
    :interval "1s"
    :initial "00:00"
    `date +%H:%M:%S`
)


(defwidget clock []
    (box
        :halign "start"
        :class "clock"
        :orientation "horizontal"
        :space-evenly false
        :spacing 20

        "Ôôè"
        time
        (desktops)
    )
)

